---
interface Props {
  href: string;
  title: string;
  description: string;
  icon: string;
  transitionName: string;
}

const { href, title, description, icon, transitionName } = Astro.props;
---

<a 
  href={href} 
  class="navigation-tile"
  transition:name={transitionName}
>
  <div class="tile-icon">{icon}</div>
  <div class="tile-content">
    <h3 class="tile-title">{title}</h3>
    <p class="tile-description">{description}</p>
  </div>
  <div class="tile-arrow">â†’</div>
</a>

<style>
  .navigation-tile {
    display: flex;
    align-items: center;
    gap: var(--space-md, 16px);
    padding: var(--space-lg, 24px);
    background: var(--color-bg-secondary, #13131a);
    border-radius: var(--radius-lg, 24px);
    box-shadow: var(--shadow-md, 0 4px 16px rgba(0, 0, 0, 0.2));
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }
  
  .navigation-tile:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-glow, 0 0 32px rgba(99, 102, 241, 0.4));
    border-color: var(--color-accent-primary, #6366f1);
  }
  
  .tile-icon {
    font-size: 32px;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary, linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%));
    border-radius: var(--radius-md, 16px);
    flex-shrink: 0;
  }
  
  .tile-content {
    flex: 1;
    min-width: 0;
  }
  
  .tile-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-xs, 4px) 0;
  }
  
  .tile-description {
    font-size: 14px;
    color: var(--color-text-secondary, #a0a0b0);
    margin: 0;
    line-height: 1.4;
  }
  
  .tile-arrow {
    font-size: 24px;
    color: var(--color-text-tertiary, #6b6b80);
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }
  
  .navigation-tile:hover .tile-arrow {
    transform: translateX(4px);
    color: var(--color-accent-primary, #6366f1);
  }
  
  @media (max-width: 640px) {
    .navigation-tile {
      padding: var(--space-md, 16px);
    }
    
    .tile-icon {
      width: 48px;
      height: 48px;
      font-size: 24px;
    }
    
    .tile-title {
      font-size: 16px;
    }
    
    .tile-description {
      font-size: 13px;
    }
  }
</style>
