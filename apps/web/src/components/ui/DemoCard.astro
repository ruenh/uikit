---
/**
 * DemoCard Component
 * 
 * A reusable card component with premium design features:
 * - Glass morphism effect with backdrop blur
 * - Large border radius (16px minimum)
 * - Soft multi-layer shadows
 * - Hover glow effect
 * 
 * Requirements: 1.3, 1.4, 1.5, 1.7
 */

interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div class={`demo-card ${className}`}>
  {title && <h3 class="demo-card-title">{title}</h3>}
  <div class="demo-card-content">
    <slot />
  </div>
</div>

<style>
  /* 
   * DemoCard Styles
   * 
   * Requirements:
   * - 1.3: Glass morphism effects with subtle backdrop blur
   * - 1.4: Large border radii (minimum 16px)
   * - 1.5: Soft shadows with multiple layers
   * - 1.7: Glow animations on hover
   */
  
  .demo-card {
    /* Glass morphism effect (Requirement 1.3) */
    background: var(--glass-bg, rgba(255, 255, 255, 0.05));
    backdrop-filter: blur(var(--glass-blur, 12px));
    -webkit-backdrop-filter: blur(var(--glass-blur, 12px));
    border: 1px solid var(--glass-border, rgba(255, 255, 255, 0.1));
    
    /* Large border radius (Requirement 1.4) */
    border-radius: var(--radius-lg, 24px);
    
    /* Soft multi-layer shadows (Requirement 1.5) */
    box-shadow: var(--shadow-md, 0 4px 16px rgba(0, 0, 0, 0.2), 0 2px 8px rgba(0, 0, 0, 0.1));
    
    /* Spacing */
    padding: var(--space-lg, 24px);
    
    /* Smooth transitions for hover effects */
    transition: all 0.3s ease;
    
    /* Ensure content is positioned correctly */
    position: relative;
    overflow: hidden;
  }
  
  /* Hover glow effect (Requirement 1.7) */
  .demo-card:hover {
    /* Enhanced glow shadow on hover */
    box-shadow: var(--shadow-glow, 0 0 32px rgba(99, 102, 241, 0.4)),
                var(--shadow-md, 0 4px 16px rgba(0, 0, 0, 0.2));
    
    /* Subtle lift effect */
    transform: translateY(-2px);
    
    /* Brighten border on hover */
    border-color: rgba(99, 102, 241, 0.3);
  }
  
  /* Active state */
  .demo-card:active {
    transform: translateY(0);
  }
  
  /* Card title styling */
  .demo-card-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-md, 16px) 0;
    line-height: 1.3;
  }
  
  /* Card content area */
  .demo-card-content {
    color: var(--color-text-secondary, #a0a0b0);
    line-height: 1.6;
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .demo-card {
      padding: var(--space-md, 16px);
      border-radius: var(--radius-md, 16px);
    }
    
    .demo-card-title {
      font-size: 18px;
      margin-bottom: var(--space-sm, 8px);
    }
  }
  
  /* Reduced motion support (Requirement 1.8) */
  @media (prefers-reduced-motion: reduce) {
    .demo-card {
      transition: none;
    }
    
    .demo-card:hover {
      transform: none;
    }
  }
</style>
