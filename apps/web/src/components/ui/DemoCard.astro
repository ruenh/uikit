---
interface Props {
  title?: string;
  class?: string;
}
const { title, class: className = "" } = Astro.props;
---

<section class={`rounded-2xl border border-white/10 bg-white/5 backdrop-blur-md p-6
  shadow-[0_12px_40px_rgba(0,0,0,.45)]
  transition hover:shadow-[0_0_0_1px_rgba(99,102,241,.25),0_18px_60px_rgba(0,0,0,.55)] ${className}`}>
  {title && <h3 class="mb-3 text-lg font-semibold">{title}</h3>}
  <div class="text-[var(--color-text-secondary)] leading-relaxed">
    <slot />
  </div>
</section>
