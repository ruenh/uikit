---
import Layout from '../layouts/Layout.astro';
import ThemeSwitcher from '../components/islands/ThemeSwitcher.svelte';
---

<Layout title="Theme System - TMA Studio">
  <div class="container">
    <header class="page-header">
      <h1 class="page-title">Theme System</h1>
      <p class="page-description">
        Explore the three theme modes: Native (Telegram colors), Premium (custom design), and Mixed (blend of both).
        Your theme preference is saved to the database and persists across sessions.
      </p>
    </header>

    <section class="theme-switcher-section">
      <h2 class="section-title">Theme Switcher</h2>
      <p class="section-description">
        Select a theme mode. Your preference will be saved automatically.
      </p>
      <div class="switcher-wrapper">
        <ThemeSwitcher client:load />
      </div>
    </section>

    <section class="theme-info-section">
      <h2 class="section-title">Telegram Theme Parameters</h2>
      <p class="section-description">
        These are the color values provided by Telegram based on your client's theme.
      </p>
      <div class="theme-params-grid" id="theme-params">
        <div class="param-card">
          <div class="param-label">Background Color</div>
          <div class="param-value" data-param="bg_color">--</div>
          <div class="param-preview" data-preview="bg_color"></div>
        </div>
        <div class="param-card">
          <div class="param-label">Text Color</div>
          <div class="param-value" data-param="text_color">--</div>
          <div class="param-preview" data-preview="text_color"></div>
        </div>
        <div class="param-card">
          <div class="param-label">Hint Color</div>
          <div class="param-value" data-param="hint_color">--</div>
          <div class="param-preview" data-preview="hint_color"></div>
        </div>
        <div class="param-card">
          <div class="param-label">Link Color</div>
          <div class="param-value" data-param="link_color">--</div>
          <div class="param-preview" data-preview="link_color"></div>
        </div>
        <div class="param-card">
          <div class="param-label">Button Color</div>
          <div class="param-value" data-param="button_color">--</div>
          <div class="param-preview" data-preview="button_color"></div>
        </div>
        <div class="param-card">
          <div class="param-label">Button Text Color</div>
          <div class="param-value" data-param="button_text_color">--</div>
          <div class="param-preview" data-preview="button_text_color"></div>
        </div>
        <div class="param-card">
          <div class="param-label">Secondary BG Color</div>
          <div class="param-value" data-param="secondary_bg_color">--</div>
          <div class="param-preview" data-preview="secondary_bg_color"></div>
        </div>
      </div>
    </section>

    <section class="css-vars-section">
      <h2 class="section-title">CSS Custom Properties</h2>
      <p class="section-description">
        These CSS variables change based on the selected theme mode.
      </p>
      
      <div class="theme-mode-tabs">
        <button class="tab-button active" data-tab="native">Native Mode</button>
        <button class="tab-button" data-tab="premium">Premium Mode</button>
        <button class="tab-button" data-tab="mixed">Mixed Mode</button>
      </div>

      <div class="tab-content active" data-content="native">
        <div class="css-vars-grid">
          <div class="css-var-card">
            <div class="var-name">--color-bg-primary</div>
            <div class="var-value">var(--tg-bg-color)</div>
            <div class="var-preview" style="background: var(--tg-bg-color, #ffffff);"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--color-text-primary</div>
            <div class="var-value">var(--tg-text-color)</div>
            <div class="var-preview" style="background: var(--tg-text-color, #000000);"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--color-accent-primary</div>
            <div class="var-value">var(--tg-button-color)</div>
            <div class="var-preview" style="background: var(--tg-button-color, #3390ec);"></div>
          </div>
        </div>
        <p class="mode-description">
          Native mode uses Telegram's theme parameters directly, ensuring perfect integration with the user's Telegram client theme.
        </p>
      </div>

      <div class="tab-content" data-content="premium">
        <div class="css-vars-grid">
          <div class="css-var-card">
            <div class="var-name">--color-bg-primary</div>
            <div class="var-value">#0a0a0f</div>
            <div class="var-preview" style="background: #0a0a0f;"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--color-text-primary</div>
            <div class="var-value">#ffffff</div>
            <div class="var-preview" style="background: #ffffff;"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--color-accent-primary</div>
            <div class="var-value">#6366f1</div>
            <div class="var-preview" style="background: #6366f1;"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--gradient-primary</div>
            <div class="var-value">linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%)</div>
            <div class="var-preview" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--shadow-glow</div>
            <div class="var-value">0 0 32px rgba(99, 102, 241, 0.4)</div>
            <div class="var-preview glow-preview"></div>
          </div>
        </div>
        <p class="mode-description">
          Premium mode uses custom design colors with gradients, glow effects, and glass morphism for a polished, modern look.
        </p>
      </div>

      <div class="tab-content" data-content="mixed">
        <div class="css-vars-grid">
          <div class="css-var-card">
            <div class="var-name">--color-bg-primary</div>
            <div class="var-value">var(--tg-bg-color) + overlay</div>
            <div class="var-preview" style="background: var(--tg-bg-color, #0a0a0f);"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--color-accent-primary</div>
            <div class="var-value">#6366f1 (premium)</div>
            <div class="var-preview" style="background: #6366f1;"></div>
          </div>
          <div class="css-var-card">
            <div class="var-name">--gradient-primary</div>
            <div class="var-value">linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%)</div>
            <div class="var-preview" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);"></div>
          </div>
        </div>
        <p class="mode-description">
          Mixed mode blends Telegram's theme colors with premium design elements, providing a balance between native feel and custom branding.
        </p>
      </div>
    </section>

    <section class="reactivity-demo-section">
      <h2 class="section-title">Theme Reactivity Demo</h2>
      <p class="section-description">
        These elements automatically update when you change the theme mode.
      </p>
      <div class="demo-grid">
        <div class="demo-card">
          <h3 class="demo-card-title">Background</h3>
          <div class="demo-box demo-bg"></div>
          <code class="demo-code">background: var(--color-bg-primary)</code>
        </div>
        <div class="demo-card">
          <h3 class="demo-card-title">Text</h3>
          <div class="demo-box demo-text">Sample Text</div>
          <code class="demo-code">color: var(--color-text-primary)</code>
        </div>
        <div class="demo-card">
          <h3 class="demo-card-title">Accent</h3>
          <div class="demo-box demo-accent"></div>
          <code class="demo-code">background: var(--color-accent-primary)</code>
        </div>
        <div class="demo-card">
          <h3 class="demo-card-title">Gradient</h3>
          <div class="demo-box demo-gradient"></div>
          <code class="demo-code">background: var(--gradient-primary)</code>
        </div>
      </div>
    </section>

    <footer class="page-footer">
      <a href="/" class="back-link">
        ‚Üê Back to Home
      </a>
    </footer>
  </div>
</Layout>

<script>
  import tg from '../lib/tg';

  // Load Telegram theme parameters
  function loadThemeParams() {
    const themeParams = tg.getThemeParams();
    
    if (!themeParams) {
      console.warn('[Theme Page] Telegram WebApp API not available');
      return;
    }

    // Update theme param values and previews
    const paramMap = {
      'bg_color': themeParams.bg_color,
      'text_color': themeParams.text_color,
      'hint_color': themeParams.hint_color,
      'link_color': themeParams.link_color,
      'button_color': themeParams.button_color,
      'button_text_color': themeParams.button_text_color,
      'secondary_bg_color': themeParams.secondary_bg_color,
    };

    Object.entries(paramMap).forEach(([key, value]) => {
      const valueEl = document.querySelector(`[data-param="${key}"]`);
      const previewEl = document.querySelector(`[data-preview="${key}"]`);
      
      if (valueEl) {
        valueEl.textContent = value || 'Not available';
      }
      
      if (previewEl && value) {
        (previewEl as HTMLElement).style.background = value;
      }
    });
  }

  // Tab switching for CSS variables section
  function initTabs() {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabName = button.getAttribute('data-tab');
        
        // Update active states
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));
        
        button.classList.add('active');
        const targetContent = document.querySelector(`[data-content="${tabName}"]`);
        if (targetContent) {
          targetContent.classList.add('active');
        }
      });
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    loadThemeParams();
    initTabs();
    
    // Listen for theme changes from Telegram
    tg.onThemeChanged(() => {
      console.log('[Theme Page] Telegram theme changed, reloading params');
      loadThemeParams();
    });
  });
</script>

<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: 100vh;
  }

  .page-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: #9ca3af;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Theme Switcher Section */
  .theme-switcher-section {
    margin-bottom: 3rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary, #ffffff);
    margin-bottom: 0.5rem;
  }

  .section-description {
    font-size: 1rem;
    color: #9ca3af;
    margin-bottom: 1.5rem;
  }

  .switcher-wrapper {
    display: flex;
    justify-content: center;
  }

  /* Theme Parameters Section */
  .theme-info-section {
    margin-bottom: 3rem;
  }

  .theme-params-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .param-card {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.2s;
  }

  .param-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(99, 102, 241, 0.3);
    transform: translateY(-2px);
  }

  .param-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #9ca3af;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .param-value {
    font-size: 0.875rem;
    font-family: 'Courier New', monospace;
    color: var(--color-text-primary, #ffffff);
    margin-bottom: 0.75rem;
    word-break: break-all;
  }

  .param-preview {
    width: 100%;
    height: 40px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* CSS Variables Section */
  .css-vars-section {
    margin-bottom: 3rem;
  }

  .theme-mode-tabs {
    display: flex;
    gap: 0.5rem;
    margin: 1.5rem 0;
    padding: 0.25rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    overflow-x: auto;
  }

  .tab-button {
    flex: 1;
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: none;
    border-radius: 8px;
    color: #9ca3af;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .tab-button:hover {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-text-primary, #ffffff);
  }

  .tab-button.active {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: #ffffff;
  }

  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .css-vars-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .css-var-card {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
  }

  .var-name {
    font-size: 0.875rem;
    font-weight: 600;
    font-family: 'Courier New', monospace;
    color: #6366f1;
    margin-bottom: 0.5rem;
  }

  .var-value {
    font-size: 0.75rem;
    font-family: 'Courier New', monospace;
    color: #9ca3af;
    margin-bottom: 0.75rem;
    word-break: break-all;
  }

  .var-preview {
    width: 100%;
    height: 40px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .glow-preview {
    background: #6366f1;
    box-shadow: 0 0 32px rgba(99, 102, 241, 0.4);
  }

  .mode-description {
    font-size: 0.875rem;
    color: #9ca3af;
    line-height: 1.6;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.02);
    border-left: 3px solid #6366f1;
    border-radius: 4px;
  }

  /* Reactivity Demo Section */
  .reactivity-demo-section {
    margin-bottom: 3rem;
  }

  .demo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .demo-card {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
  }

  .demo-card-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    margin-bottom: 1rem;
  }

  .demo-box {
    width: 100%;
    height: 80px;
    border-radius: 8px;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .demo-bg {
    background: var(--color-bg-primary, #0a0a0f);
  }

  .demo-text {
    color: var(--color-text-primary, #ffffff);
    background: rgba(255, 255, 255, 0.05);
  }

  .demo-accent {
    background: var(--color-accent-primary, #6366f1);
  }

  .demo-gradient {
    background: var(--gradient-primary, linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%));
  }

  .demo-code {
    display: block;
    font-size: 0.75rem;
    font-family: 'Courier New', monospace;
    color: #9ca3af;
    padding: 0.5rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
    overflow-x: auto;
  }

  /* Footer */
  .page-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #6366f1;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .back-link:hover {
    color: #8b5cf6;
    transform: translateX(-4px);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .container {
      padding: 1rem 0.75rem;
    }

    .page-title {
      font-size: 2rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .theme-switcher-section,
    .param-card,
    .demo-card {
      padding: 1rem;
    }

    .theme-params-grid,
    .css-vars-grid,
    .demo-grid {
      grid-template-columns: 1fr;
    }

    .tab-button {
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
    }
  }
</style>
